{{>head}}

<form class="container">
    {{#talk}}
        <div class="form-group">
            <label>제목</label>
            <input type="text" class="form-control" id="talk-title" placeholder="제목을 입력하세요" value="{{title}}">
        </div>

        <div class="form-group">
            <label>내용</label>
            <textarea class="form-control" id="talk-content" placeholder="내용을 입력하세요" rows="3">{{content}}</textarea>
        </div>


        <input type="hidden" id="talk-id" value="{{id}}">

        <button type="button" class="btn btn-primary" id="talk-update-btn">제출</button>
    {{/talk}}
</form>

<script src="/js/app/common/talk.js"></script>

{{>footer}}
