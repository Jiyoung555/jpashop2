{{>head}}

<div class="super-top">
    <h4 class="show-h4">Talk</h4>
</div>

<div class="show-top">
    <table class="table table-hover">
        <tbody>
        {{#talk}}
            <tr>
                <th>글번호</th>
                <td>{{id}}</td>
            </tr>

            <tr>
                <th>제목</th>
                <td>{{title}}</td>
            </tr>

            <tr>
                <th>내용</th>
                <td>{{content}}</td>
            </tr>
        {{/talk}}
        </tbody>
    </table>

</div>

<!-- 수정/삭제 버튼 추가 -->
<div class="show-top2">
    <div class="show-top2-btns">
        <a href="/talk" class="btn show-list-btn">목록</a>
        <a href="/talk/edit/{{talk.id}}" class="btn btn-edit">수정</a>
        <button class="btn" id="talk-destroy-btn">삭제</button> <!--sone포폴에 article이라 적어둠. 수정하세요-->
    </div>

</div>

