{{>head}}


<div class="account-label">
    <h4>오더 검색 목록</h4>
</div>


<!-- 검색 화면 -->
<!-- 검색 화면 -->
<div id="adminOrderList_search_1">
    <form method="post" action="/admin/orderSearchTop"> <!--js없이-->
        <select name="orderStatus">
            <option value="">주문상태</option>
            <option value="ordered">ORDERED</option>
            <option value="canceled">CANCELED</option>
            <option value="paid">PAID</option>
        </select>

        이름 : <input type="text" name="memberName"/>
        이메일 : <input type="text" name="memberEmail"/>
        <button id="orderSearchBtnTest" type="submit">검색</button>
    </form>
</div>

<!-- 테이블-->
<div class="account-mid">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>주문번호</th>
            <th>주문일</th>
            <th>주문상태</th>

            <th>회원이메일</th>
            <th>회원이름</th>

            <th>배송상태</th>

            <th>주문상품명</th>
        </tr>
        </thead>

        <tbody>
        {{#searchOrderDetail}}
            <tr>
                <td><a href="/orderShow/{{orderId}}">{{orderId}}</a></td>
                <td>{{orderDate}}</td>
                <td>{{orderStatus}}</td>

                <td>{{email}}</td>
                <td>{{member_name}}</td>

                <td>{{deliveryStatus}}</td>

                <td>{{nameArr}}</td>
            </tr>
        {{/searchOrderDetail}}
        </tbody>
    </table>
</div>

<!--검색2-->
<div id="adminOrderList_search_2">
    <form method="post" action="/admin/orderSearch"> <!--js없이-->
        <select name="searchType"> <!--id="searchType"-->
            <option value="">검색조건</option>
            <option value="member_name">회원이름</option>
            <option value="orderStatus">주문상태</option>
        </select>

        <input type="text" name="searchKeyword"/> <!--id="searchKeyword"-->
        <button id="orderSearchBtn" type="submit">검색</button>
    </form>
</div>


<script src = "/js/app/common/order.js"></script>

{{>footer}}